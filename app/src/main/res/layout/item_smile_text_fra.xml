<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:background="#eee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:lineSpacingExtra="8dp"
            android:id="@+id/tv_content_item_smile_text"
            android:textColor="#000"
            android:layout_margin="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time_item_smile_text"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_favorite_grey_400_24dp"
                android:id="@+id/ib_fav_item_smile_text"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_email_grey_400_24dp"
                android:id="@+id/ib_emil_item_smile_text"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>